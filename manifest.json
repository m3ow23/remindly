{ 
    "manifest_version": 3, 
    "name": "Remindly", 
    "description": "A simple extension that reminds you every n minutes for specified websites.", 
    "version": "1", 
    "author": "Nathanael Memis",
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["storage", "tabs"]
}